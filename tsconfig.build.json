{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.tsx", "src/test", "src/**/*.stories.tsx"],
}
