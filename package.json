{
  "name": "numeric-input-react",
  "version": "1.0.19",
  "description": "A React component for handling numeric input with decimal support, negative numbers, thousands separators, and IME composition handling",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "numeric",
    "input",
    "number",
    "decimal",
    "separator",
    "thousands",
    "ime",
    "typescript",
    "component"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/khachoangpt/numeric-input-react.git"
  },
  "type": "module",
  "dependencies": {
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.16",
    "jsdom": "^27.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
